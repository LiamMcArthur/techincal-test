{% import '_includes/utils' as utils %}

<div class="c-three-column-block">
    <h2 class="c-three-column-block__title">{{  block.threeColumnContentTitle }}</h2>
    <div class="row show-grid clearfix">

        {% if (block.threeColumnContentIcon1.first().url and block.threeColumnContentTitle1 and block.threeColumnContentText1) %}
        <div class="col-xs-12 col-sm-4">
            <div class="row show-grid">
                <div class="col-md-3">
                    <img class="c-three-column-block__icon" src="{{ block.threeColumnContentIcon1.first().url }}" alt="{{ block.threeColumnContentTitle1 }}"/>
                </div>
                <div class="col-md-9">
                    <h3>{{ block.threeColumnContentTitle1 }}</h3>
                    <p>{{  block.threeColumnContentText1 }}</p>
                </div>
            </div>
        </div>
        {% endif %}

        {% if (block.threeColumnContentIcon2.first().url and block.threeColumnContentTitle2 and block.threeColumnContentText2) %}
        <div class="col-xs-12 col-sm-4">
            <div class="row show-grid">
                <div class="col-md-3">
                    <img class="c-three-column-block__icon" src="{{ block.threeColumnContentIcon2.first().url }}" alt="{{ block.threeColumnContentTitle2 }}"/>
                </div>
                <div class="col-md-9">
                    <h3>{{ block.threeColumnContentTitle2 }}</h3>
                    <p>{{  block.threeColumnContentText2 }}</p>
                </div>
            </div>
        </div>
        {% endif %}

        {% if (block.threeColumnContentIcon3.first().url and block.threeColumnContentTitle3 and block.threeColumnContentText3) %}
        <div class="col-xs-12 col-sm-4">
            <div class="row show-grid">
                <div class="col-md-3">
                    <img class="c-three-column-block__icon" src="{{ block.threeColumnContentIcon3.first().url }}" alt="{{ block.threeColumnContentTitle3 }}"/>
                </div>
                <div class="col-md-9">
                    <h3>{{ block.threeColumnContentTitle3 }}</h3>
                    <p>{{  block.threeColumnContentText3 }}</p>
                </div>
            </div>
        </div>
        {% endif %}

    </div>

</div>
