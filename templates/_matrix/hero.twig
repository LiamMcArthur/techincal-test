{% import '_includes/utils' as utils %}

{% set image = block.heroImage.first() %}

{% if image %}
<div style="background-image: url('{{ image.url }}');" class="c-hero col-xs-12">
    <div class="c-hero__content">

        {% if block.heroTitle %}
        <h1 class="c-hero__title">{{ block.heroTitle }}</h1>
        {% endif %}

        {% if block.heroContent %}
        <p class="c-hero__paragraph">{{  block.heroContent }}</p>
        {% endif %}

        {% if block.heroLink.link %}
        {% set heroLinkAttributes = {
            class: 'c-button c-button--primary c-button--large',
        } %}
        {{ block.heroLink.link(heroLinkAttributes ) }}
        {% endif %}

    </div>
</div>
{% endif %}
